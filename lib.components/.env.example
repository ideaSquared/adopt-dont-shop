# Component Library Configuration
# Build Configuration
VITE_LIBRARY_NAME=adopt-dont-shop-components
VITE_LIBRARY_VERSION=1.0.0

# Development Configuration
VITE_DEV_PORT=3010
VITE_ENABLE_STORYBOOK=true

# Build Output Configuration
VITE_OUTPUT_FORMAT=es,umd
VITE_EXTERNAL_DEPS=react,react-dom,styled-components

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_THEME_SWITCHING=true

# Performance Configuration
VITE_ENABLE_TREE_SHAKING=true
VITE_BUNDLE_ANALYZER=false
