# Rescue App Configuration
# API Configuration
VITE_API_URL=http://localhost:5000
VITE_API_BASE_URL=http://localhost:5000
VITE_SOCKET_URL=http://localhost:5000

# App Configuration
VITE_APP_NAME=Adopt Don't Shop - Rescue
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development
VITE_PORT=3002

# Feature Flags
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_RESCUE_TOOLS=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_CHAT=true
VITE_ENABLE_NOTIFICATIONS=true

# Rescue-specific Features
VITE_ENABLE_PET_MANAGEMENT=true
VITE_ENABLE_APPLICATION_REVIEW=true
VITE_ENABLE_COMMUNICATION=true
VITE_ENABLE_VOLUNTEER_MANAGEMENT=true
VITE_ENABLE_EVENTS_CALENDAR=true

# File Upload Configuration
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf
VITE_MAX_FILES_PER_UPLOAD=10

# Third-party Services
VITE_GOOGLE_ANALYTICS_ID=your-ga-tracking-id
VITE_SENTRY_DSN=your-sentry-dsn-url
VITE_MAPBOX_API_KEY=your-mapbox-api-key

# Performance Configuration
VITE_ENABLE_DEBUG_LOGGING=true
VITE_API_TIMEOUT=30000
VITE_PAGINATION_SIZE=20
