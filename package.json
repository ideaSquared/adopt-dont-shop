{
  "name": "adopt-dont-shop-workspace",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "packageManager": "npm@10.8.1",
  "workspaces": [
    "app.admin",
    "app.client",
    "app.rescue",
    "eslint-config-base",
    "eslint-config-node",
    "eslint-config-react",
    "lib.analytics",
    "lib.api",
    "lib.applications",
    "lib.audit-logs",
    "lib.auth",
    "lib.chat",
    "lib.components",
    "lib.dev-tools",
    "lib.discovery",
    "lib.feature-flags",
    "lib.invitations",
    "lib.moderation",
    "lib.notifications",
    "lib.permissions",
    "lib.pets",
    "lib.rescue",
    "lib.search",
    "lib.support-tickets",
    "lib.utils",
    "lib.validation",
    "service.backend"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:apps": "turbo run dev --filter='@adopt-dont-shop/app.*' --parallel",
    "dev:libs": "turbo run dev --filter='@adopt-dont-shop/lib.*' --parallel",
    "dev:libs-watch": "turbo run dev --filter='@adopt-dont-shop/lib.*' --parallel --no-deps",
    "dev:full": "concurrently \"npm run dev:libs-watch\" \"npm run dev:apps\"",
    "build": "turbo run build",
    "build:libs": "turbo run build --filter=\"@adopt-dont-shop/lib.*\"",
    "build:libs-new": "turbo run build --filter=\"@adopt-dont-shop/lib.analytics\" --filter=\"@adopt-dont-shop/lib.applications\" --filter=\"@adopt-dont-shop/lib.discovery\" --filter=\"@adopt-dont-shop/lib.feature-flags\" --filter=\"@adopt-dont-shop/lib.notifications\" --filter=\"@adopt-dont-shop/lib.permissions\" --filter=\"@adopt-dont-shop/lib.pets\" --filter=\"@adopt-dont-shop/lib.search\"",
    "build:libs-verbose": "turbo run build --filter=\"@adopt-dont-shop/lib.*\" --verbosity=2",
    "build:libs-parallel": "turbo run build --filter=\"@adopt-dont-shop/lib.*\" --parallel",
    "build:apps": "turbo run build --filter=\"@adopt-dont-shop/app.*\"",
    "test": "turbo run test",
    "test:libs": "turbo run test --filter='@adopt-dont-shop/lib.*'",
    "test:apps": "turbo run test --filter='@adopt-dont-shop/app.*'",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .prettierignore",
    "dev:backend": "turbo run dev --filter=@adopt-dont-shop/service-backend",
    "dev:client": "turbo run dev --filter=@adopt-dont-shop/app.client",
    "dev:admin": "turbo run dev --filter=@adopt-dont-shop/app.admin",
    "dev:rescue": "turbo run dev --filter=@adopt-dont-shop/app.rescue",
    "dev:components": "turbo run dev --filter=@adopt-dont-shop/lib.components",
    "build:backend": "turbo run build --filter=@adopt-dont-shop/service-backend",
    "build:client": "turbo run build --filter=@adopt-dont-shop/app.client",
    "build:admin": "turbo run build --filter=@adopt-dont-shop/app.admin",
    "build:rescue": "turbo run build --filter=@adopt-dont-shop/app.rescue",
    "build:components": "turbo run build --filter=@adopt-dont-shop/lib.components",
    "test:backend": "turbo run test --filter=@adopt-dont-shop/service-backend",
    "test:client": "turbo run test --filter=@adopt-dont-shop/app.client",
    "test:admin": "turbo run test --filter=@adopt-dont-shop/app.admin",
    "test:rescue": "turbo run test --filter=@adopt-dont-shop/app.rescue",
    "test:components": "turbo run test --filter=@adopt-dont-shop/lib.components",
    "generate:attachments": "node scripts/generate-test-attachments.js",
    "new-app": "node scripts/create-new-app.js",
    "new-lib": "node scripts/create-new-lib.js",
    "dev:lib-api": "turbo run dev --filter=@adopt-dont-shop/lib.api",
    "build:lib-api": "turbo run build --filter=@adopt-dont-shop/lib.api",
    "test:lib-api": "turbo run test --filter=@adopt-dont-shop/lib.api",
    "docker:libs": "docker-compose -f docker-compose.libs.yml up",
    "docker:libs-test": "docker-compose -f docker-compose.libs.yml run --rm lib-api-test lib-components-test",
    "validate:env": "node scripts/validate-env.mjs",
    "check:env": "npm run validate:env",
    "dev:lib-utils": "turbo run dev --filter=@adopt-dont-shop/lib.utils",
    "build:lib-utils": "turbo run build --filter=@adopt-dont-shop/lib.utils",
    "test:lib-utils": "turbo run test --filter=@adopt-dont-shop/lib.utils",
    "dev:lib-validation": "turbo run dev --filter=@adopt-dont-shop/lib.validation",
    "build:lib-validation": "turbo run build --filter=@adopt-dont-shop/lib.validation",
    "test:lib-validation": "turbo run test --filter=@adopt-dont-shop/lib.validation",
    "dev:lib-auth": "turbo run dev --filter=@adopt-dont-shop/lib.auth",
    "build:lib-auth": "turbo run build --filter=@adopt-dont-shop/lib.auth",
    "test:lib-auth": "turbo run test --filter=@adopt-dont-shop/lib.auth",
    "dev:lib-chat": "turbo run dev --filter=@adopt-dont-shop/lib.chat",
    "build:lib-chat": "turbo run build --filter=@adopt-dont-shop/lib.chat",
    "test:lib-chat": "turbo run test --filter=@adopt-dont-shop/lib.chat",
    "dev:lib-notifications": "turbo run dev --filter=@adopt-dont-shop/lib.notifications",
    "build:lib-notifications": "turbo run build --filter=@adopt-dont-shop/lib.notifications",
    "test:lib-notifications": "turbo run test --filter=@adopt-dont-shop/lib.notifications",
    "dev:lib-analytics": "turbo run dev --filter=@adopt-dont-shop/lib.analytics",
    "build:lib-analytics": "turbo run build --filter=@adopt-dont-shop/lib.analytics",
    "test:lib-analytics": "turbo run test --filter=@adopt-dont-shop/lib.analytics",
    "dev:lib-permissions": "turbo run dev --filter=@adopt-dont-shop/lib.permissions",
    "build:lib-permissions": "turbo run build --filter=@adopt-dont-shop/lib.permissions",
    "test:lib-permissions": "turbo run test --filter=@adopt-dont-shop/lib.permissions",
    "dev:lib-pets": "turbo run dev --filter=@adopt-dont-shop/lib.pets",
    "build:lib-pets": "turbo run build --filter=@adopt-dont-shop/lib.pets",
    "test:lib-pets": "turbo run test --filter=@adopt-dont-shop/lib.pets",
    "dev:lib-rescue": "turbo run dev --filter=@adopt-dont-shop/lib.rescue",
    "build:lib-rescue": "turbo run build --filter=@adopt-dont-shop/lib.rescue",
    "test:lib-rescue": "turbo run test --filter=@adopt-dont-shop/lib.rescue",
    "dev:lib-discovery": "turbo run dev --filter=@adopt-dont-shop/lib.discovery",
    "build:lib-discovery": "turbo run build --filter=@adopt-dont-shop/lib.discovery",
    "test:lib-discovery": "turbo run test --filter=@adopt-dont-shop/lib.discovery",
    "dev:lib-search": "turbo run dev --filter=@adopt-dont-shop/lib.search",
    "build:lib-search": "turbo run build --filter=@adopt-dont-shop/lib.search",
    "test:lib-search": "turbo run test --filter=@adopt-dont-shop/lib.search",
    "dev:lib-feature-flags": "turbo run dev --filter=@adopt-dont-shop/lib.feature-flags",
    "build:lib-feature-flags": "turbo run build --filter=@adopt-dont-shop/lib.feature-flags",
    "test:lib-feature-flags": "turbo run test --filter=@adopt-dont-shop/lib.feature-flags",
    "dev:lib-applications": "turbo run dev --filter=@adopt-dont-shop/lib.applications",
    "build:lib-applications": "turbo run build --filter=@adopt-dont-shop/lib.applications",
    "test:lib-applications": "turbo run test --filter=@adopt-dont-shop/lib.applications",
    "dev:lib-dev-tools": "turbo run dev --filter=@adopt-dont-shop/lib.dev-tools",
    "build:lib-dev-tools": "turbo run build --filter=@adopt-dont-shop/lib.dev-tools",
    "test:lib-dev-tools": "turbo run test --filter=@adopt-dont-shop/lib.dev-tools",
    "dev:lib-invitations": "turbo run dev --filter=@adopt-dont-shop/lib.invitations",
    "build:lib-invitations": "turbo run build --filter=@adopt-dont-shop/lib.invitations",
    "test:lib-invitations": "turbo run test --filter=@adopt-dont-shop/lib.invitations"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/ui": "^4.0.8",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.1.0",
    "lerna": "^8.1.2",
    "prettier": "^3.2.5",
    "sqlite3": "^5.1.7",
    "turbo": "^2.5.4",
    "typescript": "^5.4.5",
    "vitest": "^4.0.8",
    "whatwg-fetch": "^3.6.20"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
