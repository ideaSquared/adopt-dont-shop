# Admin App Configuration
# API Configuration - Industry Standard URL Environment Variables
VITE_API_BASE_URL=http://api.localhost:5000
VITE_WS_BASE_URL=ws://api.localhost:5000

# App Configuration
VITE_APP_NAME=Adopt Don't Shop - Admin
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development
VITE_PORT=3001

# Feature Flags
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_ADMIN_TOOLS=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_AUDIT_LOGGING=true
VITE_ENABLE_BULK_OPERATIONS=true

# Admin-specific Features
VITE_ENABLE_USER_MANAGEMENT=true
VITE_ENABLE_RESCUE_MANAGEMENT=true
VITE_ENABLE_PET_MANAGEMENT=true
VITE_ENABLE_APPLICATION_MANAGEMENT=true
VITE_ENABLE_SYSTEM_MONITORING=true

# Third-party Services
VITE_GOOGLE_ANALYTICS_ID=your-ga-tracking-id
VITE_SENTRY_DSN=your-sentry-dsn-url

# Security Configuration
VITE_SESSION_TIMEOUT=3600000
VITE_IDLE_TIMEOUT=1800000

# Performance Configuration
VITE_ENABLE_DEBUG_LOGGING=true
VITE_API_TIMEOUT=30000
VITE_PAGINATION_SIZE=25
