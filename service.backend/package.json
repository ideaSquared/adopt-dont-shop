{
  "name": "@adopt-dont-shop/service-backend",
  "version": "1.0.0",
  "description": "Backend API service for Adopt Don't Shop",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "clean": "rm -rf dist",
    "migrate": "sequelize-cli db:migrate",
    "seed": "sequelize-cli db:seed:all",
    "security:validate": "node scripts/validate-security.js",
    "prestart": "npm run security:validate",
    "predeploy": "npm run lint && npm run test && npm run security:validate && npm run build"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.15.0",
    "@types/validator": "^13.7.10",
    "bcrypt": "^5.1.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.0.0",
    "isomorphic-dompurify": "^2.25.0",
    "jsonwebtoken": "^9.0.2",
    "marked": "^15.0.12",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.31.0",
    "sequelize-typescript": "^2.1.5",
    "socket.io": "^4.6.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/dompurify": "^3.2.0",
    "@types/jest": "^29.5.0",
    "@types/marked": "^6.0.0",
    "@types/morgan": "^1.9.4",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^2.0.12",
    "eslint": "^8.36.0",
    "jest": "^29.5.0",
    "sequelize-cli": "^6.6.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  }
}
