{
  "name": "@adopt-dont-shop/service-backend",
  "version": "1.0.0",
  "description": "Backend API service for Adopt Don't Shop",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only --poll --watch src src/index.ts",
    "dev:fresh": "cross-env FORCE_SEED=true ts-node-dev --respawn --transpile-only --poll --watch src src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "clean": "rm -rf dist",
    "migrate": "sequelize-cli db:migrate",
    "seed": "sequelize-cli db:seed:all",
    "seed:dev": "ts-node src/seeders/index.ts",
    "seed:clear": "ts-node src/seeders/index.ts clear",
    "security:validate": "node scripts/validate-security.js",
    "docs:generate": "ts-node scripts/generate-swagger.ts generate",
    "docs:validate": "ts-node scripts/generate-swagger.ts validate",
    "docs:watch": "ts-node scripts/generate-swagger.ts watch",
    "prestart": "npm run security:validate",
    "predeploy": "npm run lint && npm run test && npm run security:validate && npm run build"
  },
  "dependencies": {
    "@sentry/node": "^10.23.0",
    "@sentry/profiling-node": "^10.23.0",
    "@types/bcrypt": "^5.0.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.7",
    "@types/nodemailer": "^6.4.17",
    "@types/uuid": "^9.0.0",
    "@types/validator": "^13.7.10",
    "bcrypt": "^5.1.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csrf-csrf": "^4.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.2.1",
    "fs-extra": "^11.3.0",
    "helmet": "^7.0.0",
    "isomorphic-dompurify": "^2.25.0",
    "jsonwebtoken": "^9.0.2",
    "marked": "^15.0.12",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.3",
    "path": "^0.12.7",
    "pg": "^8.11.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.31.0",
    "sequelize-typescript": "^2.1.5",
    "sharp": "^0.34.2",
    "socket.io": "^4.6.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.0",
    "winston": "^3.17.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@adopt-dont-shop/eslint-config-node": "*",
    "@types/cookie-parser": "^1.4.10",
    "@types/dompurify": "^3.2.0",
    "@types/fs-extra": "^11.0.4",
    "@types/marked": "^6.0.0",
    "@types/morgan": "^1.9.4",
    "@types/node": "^22.19.0",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/ui": "^4.0.8",
    "cross-env": "^10.1.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "sequelize-cli": "^6.6.0",
    "sqlite3": "^5.1.7",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4",
    "vite": "^7.2.2",
    "vitest": "^4.0.8"
  }
}
